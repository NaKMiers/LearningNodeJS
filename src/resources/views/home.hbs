<div class="mt-4">
    <h1>Home Page</h1>

    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <a class="thumbnail-card" href="/courses/{{this.slug}}" style="background-image: url({{this.image}});"></a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Learning</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>